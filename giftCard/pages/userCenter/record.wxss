@import "../../icon/iconfont.wxss";
page{
  background: #fff;
}
.body{
  padding:0 35rpx 0rpx 35rpx;
  background: #fff;
}
.record{
  margin-top: 30rpx;
}
.fl{
  float:left;
}
.fr{
  float: right;
}
.content{
  /* padding: 24rpx 22rpx; */
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
  background-repeat: no-repeat;
  background-size: 100%;
}
.notAvaliable .content{
  padding:0rpx;
}
.notAvaliable .hoverMask{
  padding: 24rpx 22rpx;
  background: rgba(0,0,0,.5)
}
.cardMsg{
  overflow: hidden;
  margin-bottom: 20rpx;
}
.logo{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  display: inline-block;
  margin-right: 20rpx;
}

.logo image{
  width:80rpx;
  height:80rpx;
  border-radius: 50%
}
.cardType{
  display:inline-block;
  color:#fff;
}
.name{
  font-size:30rpx;
}
.type{
  font-size: 22rpx;
  margin-top:7rpx;
}
.validity{
  padding-left: 105rpx;
  text-align: right;
}
.period{
  font-size: 22rpx;
  color:#fff;
}
.use,.status{
  position: absolute;
  font-size:22rpx;
  line-height: 36rpx;
  width:106rpx;
  text-align: center;
  background: rgba(0,0,0,.5);
  border-radius: 18rpx;
  border: 2rpx solid #fff;
  color:#fff;
  right:20rpx;
  top:25rpx;
}
.money{
  position: absolute;
  color:#fff;
  bottom:20rpx;
  right:25rpx;
  font-size: 40rpx;
}
.money span{
  font-size: 26rpx;
}
.money .rebackNotice{
  font-size: 22rpx;
}
.detailContent{
  background: #f4f4f4;
  padding-left: 40rpx;
}
.line{
  overflow: hidden;
  font-size: 24rpx;
  color:#666;
  padding: 30rpx 30rpx 30rpx 0;
  border-bottom:2rpx solid #eee;
}
.btnGroup{
  font-size: 20rpx;
  color:#666;
  overflow: hidden;
  padding:15rpx 30rpx;
}
.btnGroup>view{
  display: inline-block;
  line-height: 44rpx;
  width:135rpx;
  text-align: center;
  border-radius:10rpx;
}
.send{
  border: 2rpx solid #666;
  margin-right: 15rpx;
}
.recharge{
  color:#f24c36;
  border:2rpx solid #f24c36
}
.viewFail,.viewUse{
  text-align: center;
  font-size: 30rpx;
  color:#666;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.footer{
  position: fixed;
  bottom:0;
  left:0;
  right:0;
  display: flex;
  background: #fff;
  padding:20rpx 0rpx;
  border-top:2rpx solid #f3f3f3;
}
.footer>navigator,.footer>view{
  flex:1;
  text-align: center;
  color:#3c3c3c;
  font-size: 26rpx;
}
.footer .iconfont{
  font-size:40rpx;
}
.footer .active{
  color:#f24c36;
}
.fixedBtn{
  width:110rpx;
  height:110rpx;
  border-radius: 50%;
  background: #fff;
  border: 2rpx solid #f24c36;
  color:#f24c36;
  position: fixed;
  text-align: center;
  font-size: 20rpx;
  right:312rpx;
  padding: 0;
  bottom:54rpx;
}
.fixedBtn::after{
  border: none;
}
.fixedBtn .iconfont{
  display:inline-block;
  margin-top:-2rpx;
}
.word{
  position:relative;
  bottom:35rpx;
}
.show{
  display: block;
}
.notShow{
  display: none;
}
.scrollContent{
  height:1100rpx;
}
.canScrollContent{
  height:1100rpx
}
.introduceMask{
  position: fixed;
  top:0;
  left:0;
  bottom: 0;
  right:0;
  background: rgba(0,0,0,.5)
}
.maskContent{
  background: #fff;
  width: 600rpx;
  border-radius:15rpx;
  padding: 35rpx 0;
  position: absolute;
  left:75rpx;
  top:160rpx;
}
.maskTitle{
  text-align: center;
  position: relative;
}
.maskTitle image{
  width:332rpx;
  height:75rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
}
.maskTitle span{
  position: absolute;
  font-size: 36rpx;
  color:#fff;
  top:8rpx;
  left:228rpx;
  z-index: 100
}
.maskBody{
  padding:0 55rpx;
  font-size: 26rpx;
  color:#666;
  line-height: 42rpx;
  margin-bottom: 50rpx;
  height:504rpx;
  overflow-y: scroll;
}
.indent{
  text-indent:52rpx
}
.maskFooter{
  text-align: center;
}
.maskFooter button{
  display: inline-block;
  margin: 0 auto;
  background: #03a6fe;
  color:#fff;
  font-size: 28rpx;
  border-radius: 38rpx;
  width:200rpx;
}
.maskFooter button::after{
  border:none;
}
.viewActive{
  color: #f24c36;
}
.pullNotice{
  color:#bbb;
  font-size: 28rpx;
  text-align: center;
  margin-top: 10rpx;
  line-height: 50rpx;
}
.loadAll{
  display: flex;
  background: #fff;
  height:50rpx;
  margin-top: 20rpx;
}
.loadAll>view{
  flex:1;
  color:#bbb;
  font-size: 28rpx;
  text-align: center
}
.line image{
  height:2rpx;
  width:150rpx;
  margin-top: -9rpx;
}
.line .fl{
  float: left
}
.line .fr{
  float: right
}
.noData image{
  width:682rpx;
  height:190rpx;
  margin-top: 200rpx;
}
.noData view{
  text-align:center;
  font-size:30rpx;
  color:#aaa;
}
.loadAll .line{
  border-bottom: none;
}
.money .moneySpan{
  font-size:40rpx;
}
.cardNo{
  font-size: 26rpx;
  color:#fff;
  margin-top: 20rpx;
}
.introduce,.service{
  bottom:150rpx;
}
.fixedBtn{
  width:92rpx;
  height:92rpx;
  border-radius: 50%;
  background: rgba(252,215,45,.8);
  border: 2rpx solid #fff;
  color:#382903;
  position: fixed;
  text-align: center;
  font-size: 20rpx;
  right:30rpx;
  padding: 0;
}
.fixedBtn::after{
  border: none;
}
.fixedBtn .iconfont{
  display:inline-block;
  margin-top:-5px;
}
.word{
  position:relative;
  bottom:35rpx; 
}
.useHover{
  background: rgba(0,0,0,.2);
  padding:24rpx 22rpx;
}