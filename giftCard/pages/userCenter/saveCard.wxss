  font-size:42rpx;
  position:absolute;
  right:65rpx;
  top:33rpx;
}
.quanXuan .icon-duihao2 {
  border:none;
  top:38rpx;
  right:70rpx;
}
.cardContent{
  overflow: hidden;
  display: inline-block;
}
.cardList .icon-duihao2{
  border: none;
  bottom:84rpx;
  right:40rpx;
}
.pullNotice{
  color:#bbb;
  font-size: 28rpx;
  text-align: center;
  margin-top: 10rpx;
  line-height: 50rpx;
}
.selectPage{
  position: fixed;
  top:0;
  left: 0;
  right:0;
  background: #fff;
  z-index: 20;
  padding-bottom: 20rpx;
}
.selectPage .selectPart{
  font-size: 30rpx;
  display: flex;
  width: 500rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  
}
.noticePart{
  font-size: 25rpx;
  text-align: center;
  color: #333;
  margin-top: 20rpx;
}
.joinRecord,.obtainRecord{
  color: #333;
  border:1rpx solid #333;
  /* border-left:none; */
  text-align: center;
  flex:1;
  padding:15rpx 0
}
.selectPage .selectPart .active{
  color:#fff;
  background: #f24c36;
  text-align: center;
  flex:1;
  padding:15rpx 0;
  border:1rpx solid #f24c36;
}
.joinRecord{
  border-left: none
}
.obtainRecord{
  border-right: none;
}
.loadAll{
  display: flex;
  background: #fff;
  height:50rpx;
  margin-top:15rpx;
}
.loadAll>view{
  flex:1;
  color:#bbb;
  font-size: 28rpx;
  text-align: center
}
.line image{
  height:2rpx;
  width:150rpx;
  margin-top: 20rpx;
}
.line .fl{
  float: left
}
.line .fr{
  float: right
}
.noData image{
  width:750rpx;
  height:230rpx;
  margin-top: 200rpx;
}
.noData view{
  text-align:center;
  font-size:30rpx;
  color:#aaa;
}



/* 参与记录样式 */
.first{
  margin-top:130rpx;
}
.orderContent{
  background: #fff;
  margin-bottom: 20rpx;
}
.title{
  padding: 20rpx 25rpx;
  overflow: hidden;
}
.fl{
  float:left;
}
.fr{
  float:right;
}
.fr{
  float: right;
}
.orderNum{
  font-size: 24rpx;
