}
.cardList{
  padding:30rpx 24rpx;
  overflow: hidden;
  position: relative;
  border-bottom:1rpx solid #eee;
}
.bodyContent .cardImg{
  margin-right: 20rpx;
}
.bodyContent .cardImg image{
  width:220rpx;
  height:132rpx;
