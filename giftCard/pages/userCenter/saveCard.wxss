}
.select {
  width:40rpx;
  height:40rpx;
  border-radius:50%;
  border:1px solid #ddd;
  position:absolute;
  font-size:42rpx;
  color:#1aad19;
  right:35rpx;
  bottom:80rpx;
}
.footer{
  position:fixed;
  bottom:0;
  left:0;
  right:0;
  display:flex;
  background:#fff;
  padding:35rpx 0rpx;
}
.footer>view{
  flex:1;
  text-align:center;
  color:#333;
  font-size:28rpx;
  border-right:1px solid #ddd;
  line-height:35rpx;
}
.footer>view:last-child{
  border-right:none; 
}
.footer .iconfont {
  color:#1aad19;
  display:inline-block;
  margin-right:10rpx;
}
.all {
  margin-right:75rpx;
}
.selectAll {
  width:40rpx;
  height:40rpx;
  border-radius:50%;
  border:1px solid #ddd;
