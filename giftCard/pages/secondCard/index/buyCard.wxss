.page {
  padding: 10rpx;
  background: linear-gradient(rgb(80, 189, 248), rgb(46, 114, 255));
  background: -webkit-linear-gradient(rgb(80, 189, 248), rgb(46, 114, 255));
  background: -o-linear-gradient(rgb(80, 189, 248), rgb(46, 114, 255));
  background: -moz-linear-gradient(rgb(80, 189, 248), rgb(46, 114, 255));
  /*height:1200rpx;*/
}
view{
  font-family:"SourceHanSansCN-Regular" !important;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.container{
  position: relative;
  padding: 90rpx 0 100rpx;
}
.card_logo{
  width:140rpx;
  height:140rpx;
  border-radius: 50%;
  background: #fff;
  line-height: 120rpx;
  text-align: center;
  position: absolute;
  top:20rpx;
  left:50%;
  margin-left: -70rpx;
}
.card_logo image{
  width:83rpx;
  height:67rpx;
  vertical-align: middle;
}
.card_down{
  /*height:1000rpx;*/
  /* background: #fff;
  border-radius: 10rpx;
  padding: 80rpx 0 0; */
}
.card_mercent{
  font-size: 26rpx;
  line-height: 24rpx;
  text-align: center;
}
.card_name{
  font-size: 32rpx;
  line-height: 31rpx;
  padding-top: 28rpx;
  text-align: center;
}
.card_list{
  padding-left: 30rpx;
  flex-wrap: wrap;
  padding-bottom: 36rpx;
}
.card_item{
  padding-right: 30rpx;
  width:33.3333%;
  padding-top: 38rpx;
}
.card_detail{
  position: relative;
  width:100%;
  height:148rpx;
  border:2px solid rgb(239,239,239);
  text-align: center;
  border-radius: 10rpx;
}
.card_detail.active.canBuy{
  border-color: rgb(70,166,250);
  background: rgb(247,251,255);
}
.card_detail.active{
  border-color: rgb(70,166,250);
  background: rgb(247,251,255);
}
.card_num{
  font-size:24rpx;
  line-height: 23rpx;
  padding: 29rpx 0 25rpx;
  font-family: 'SourceHanSansCN-Medium';
}
.card_money{
  color: rgb(66,159,251);
  align-items: flex-end;
  justify-content: center;
}
.qian_icon{
  font-size: 22rpx;
  line-height: 14rpx;
  padding-bottom: 2rpx;
}
.money_num{
  font-size: 50rpx;
  line-height: 37rpx;
  font-family: 'DINCondensed-Bold';
}
.notice_img image,.notice_img{
  width:20rpx;
  height:38rpx;
  display: block;
}
.notice_img{
  flex-shrink: 0;
}
.notice_line{
  height:1px;
  width:100%;
  border-bottom:1px dashed rgb(213,213,213);
}
.img_right{
  transform: rotate(180deg);
  -webkit-transform: rotate(180deg);
  -moz-transform: rotate(180deg);
  -ms-transform: rotate(180deg);
  -o-transform: rotate(180deg);
}
.white_bg{
  background: #fff;
}
.top{
  padding:80rpx 0 0;
  border-top-left-radius: 10rpx;
  border-top-right-radius:10rpx ;
}
.notice_middle{
  height:38rpx;
  width:100%;
  line-height: 38rpx;
  padding: 18rpx 0;
}
.notice_item{
  padding-bottom: 16rpx;
}
.notice_title{
  font-size: 22rpx;
  line-height: 32rpx;
  color: rgb(153,153,153);
  flex-shrink: 0;
}
.notice_text{
  font-size: 24rpx;
  line-height: 32rpx;
}
.item_color{
  color: rgb(65,155,251);
}
.list_wrap{
  padding: 0 40rpx;
}
.notice_list{
  border-bottom: 1px dashed rgb(213,213,213);
  padding-bottom: 14rpx;
}
.detail_card{
  padding: 26rpx 38rpx 0;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.arrow image{
  width:14rpx;
  height:25rpx;
}
.title_icon{
  font-size: 29rpx;
}
.onceCard_li{
  position: relative;
  padding:18rpx 0 10rpx;
}
.card_tip{
  text-align: center;
}
.card_tip image{
  width:590rpx;
  height:200rpx;
}
.card_msg{
  width:650rpx;
  height:200rpx;
  position: absolute;
  top:0;
  left:0;
  padding: 24rpx 27rpx 0;
}
.msg_img image{
  width:650rpx;
  height:200rpx;
  position: absolute;
  top:0;
  left:0;
}
.head_img image{
  width:154rpx;
  height:154rpx;
  border-radius: 50%;
}
.detail_text{
  width:430rpx;
}
.buy_detail {
  position: relative;
  z-index: 999;
  color: #fff;
}
.detail_title{
  font-size: 32rpx;
  line-height: 32rpx;
}
.detail_subtitle{
  font-size: 26rpx;
  padding: 20rpx 0 0;
  line-height: 25rpx;
}
.use_time image{
  width:24rpx;
  height:24rpx;
  margin-right: 7rpx;
}
.time{
  font-size: 22rpx;
  line-height: 17rpx;
}
.times_num{
  font-size: 24rpx;
  line-height: 26rpx;
}
.goBuy image{
  width:47rpx;
  height: 47rpx;
}
.buyText{
  font-size: 28rpx;
  padding-right: 15rpx;
}
.time_wrap{
  padding-top: 30rpx;
  line-height: 17rpx;
}
.right{
  padding-top: 14rpx;
}
.flex_end{
  justify-content: flex-end;
}
.full{
  width:100%;
}
.buy_detail{
  border:none;
}
.buyCard_icon{
  padding-bottom: 20rpx;
}
.footer{
  line-height: 99rpx;
  border-top: 1px solid rgb(213,213,213);
  background: #fff;
  color: rgb(66,159,251);
  font-size: 32rpx;
  text-align: center;
  box-shadow:0px -5rpx 40rpx rgba(33,23,20,0.05);
  position: fixed;
  width:100%;
  bottom:0;
  left:0;
  z-index: 9999;
}
.num_tip{
  position: absolute;
  top:0;
  right:0;
  background: rgb(65,156,251);
  color: #fff;
  font-size: 20rpx;
}