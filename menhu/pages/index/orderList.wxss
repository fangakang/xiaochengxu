/* pages/index/orderList.wxss */
@import '../../icon/iconfont.wxss';
page{
  background: #efefef;
}
button::after{
  border:none;
}
.header{
  font-size: 30rpx;
  display: flex;
  background: #fff;
  position: fixed;
  top:0;
  right: 0;
  left: 0;
  z-index: 20
}
.header>view{
  flex:1;
  text-align: center;
  color: #666;
}
.header span{
  display: inline-block;
  padding:20rpx 0;
}
.header .active{
  color: #fb2d37;
  border-bottom: 2rpx solid #fb2d37;
}
.orderList{
  padding-top: 100rpx;
  height:1090rpx;
}
.order{
  background: #fff;
  margin-bottom: 15rpx;
}
.orderTitle{
  color:#333;
  padding: 20rpx;
  font-size: 27rpx;
  border-bottom: 1rpx solid #efefef;
  padding-top: 25rpx;
}
.orderContent{
  padding: 20rpx;
}
.orderContent image{
  width: 150rpx;
  height:150rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}
.goodsName{
  font-size: 28rpx;
  color:#333;
  width:510rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 5rpx;
}
.goods{
  color:#333;
  font-size: 28rpx;
  padding-left: 20rpx;
  padding-bottom: 10rpx;
  /* border-bottom: 1rpx solid #efefef; */
}
.goods span{
  font-size: 36rpx;
  color: #fb2d37
}
.orderFooter{
  border-top:1rpx solid #efefef;
  padding: 20rpx;
}
.time{
  font-size: 27rpx;
  color:#333;
  margin-top: 20rpx;
}
.useAll{
  border-radius: 28rpx;
}
.viewDetail button,.payMoney button,.canUse button,.useAll button{
  background: #fb2d37;
  color: #fff;
  font-size: 28rpx;
  line-height:56rpx;
  width: 170rpx;
  border-radius: 28rpx;
  border: none;
}
.viewDetail button{
  background: #fff;
  color:#fb2d37;
  border:1rpx solid #fb2d37;
  width:172rpx;
}
.timeOut button{
  background: #ddd;
  color: #fff;
  font-size: 28rpx;
  line-height:56rpx;
  width:170rpx;
  border-radius:28rpx;
}
.useAll button{
  background: #ddd;
  color: #fff;
  font-size: 28rpx;
  width:170rpx;
}
.noData{
  text-align: center;
  font-size:32rpx;
  color:#999;
}
.noData image{
  width:300rpx;
  height:300rpx;
  margin: 0 auto;
  margin-top:200rpx;
}

/* 2018.8.1 */
.noData view{ 
  padding-top: 10rpx;
}
.noData image{
  width: 249rpx;
  height: 230rpx;
}
.header{
  border-bottom: 2rpx solid #ddd;
  box-shadow:0px 2rpx 8rpx #eee;
}
.status {
  color: #fb2d37
}
.status.useAllTitle{
  color: #999
}
.overTitle{
  color:#999;
}
.goods .iconfont{
  font-size: 36rpx;
}
.authorize{
  position: fixed;
  top:0;
  left:0;
  right:0;
  bottom: 0;
  background: rgba(0,0,0,.5);
  z-index: 200;
}
.authorizeModal{
  background: #fff;
  position: fixed;
  padding: 20rpx;
  top:300rpx;
  left:110rpx;
  width:500rpx;
  border-radius: 10rpx;
}
.authorizeMsg{
  text-align: center;
  font-size: 30rpx;
  color:#999;
  line-height: 45rpx;
}
.getUserInfo{
  background: #1aad19;
  color: #fff;
  font-size: 30rpx;
  width:260rpx;
  line-height: 80rpx;
  margin-top: 30rpx;
}
.getUserInfo .iconfont{
  font-size:38rpx;
  float:left;
  margin-left:15rpx;
  margin-top:3rpx;  
}
.authorizeMsg image{
  width:250rpx;
  height:250rpx;
  margin-top:20rpx;
}