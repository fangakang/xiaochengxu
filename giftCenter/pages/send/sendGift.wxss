page{
  background: #ca292f;
}
.body{
  padding:0 40rpx;
}
.title{
  display: flex;
  margin-top: 45rpx;
}
.title view{
  flex: 1;
  font-size: 34rpx;
  text-align: center;
  color:#f08d91;
}
.title .active{
  color: #ffe557;
}
.sendHeart{
  padding-left: 55rpx;
}
.lottery{
  padding-right: 55rpx;
}
.mainContent{
  background: #fff;
  border-top-left-radius: 10rpx;
  border-top-right-radius:10rpx; 
  margin-top: 30rpx;
  padding: 0 40rpx;
  padding-bottom: 100rpx;
  position: relative;
  z-index: 20;
}
swiper {
  height:340rpx;
}
swiper-item{
  text-align: center;
  padding-top: 40rpx;
}
.slide-image{
  width: 430rpx;
  height: 260rpx;
  margin: 0 auto;
  border-radius:10rpx;
}
.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 2rpx;
     margin-left: -10rpx;
}
.swiper-box .wx-swiper-dot{
    width:30rpx;
    display: inline-flex;
    height: 5rpx;
    margin-left: 5rpx;
    justify-content:space-between;
}
.swiper-box .wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    background: #bbb;
    border-radius: 8rpx
}
.swiper-box .wx-swiper-dot-active::before{
    background:rgba(244,0,0,0.8);   
}
.swiperTitle{
  text-align: center;
  font-size: 30rpx;
  color:#333;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.sendLine{
  overflow: hidden;
  padding:35rpx 0;
  border-bottom: 2rpx solid #ddd;
  position: relative
}
.fl{
  float: left;
}
.part{
  text-align: right;
  font-size: 40rpx;
}
.lineTitle{
  font-size: 28rpx;
  color: #999;
}
.inputNum input{
  text-align: right;
  position: relative;
  top:-8rpx;
} 
.noticeMsg{
  position: absolute;
  color: #ff8523;
  font-size:20rpx;
  right:0rpx;
}
.textInput{
  margin-top: 20rpx;
}
.textInput textarea{
  height:70rpx;
  background: #f1f1f1;
  padding: 15rpx 25rpx;
  width: 540rpx;
  font-size: 28rpx;
  overflow: scroll;
}
.sendBtn{
  width: 175rpx;
  line-height: 175rpx;
  border-radius: 50%;
  text-align: center;
  color: #ca7a7d;
  font-size: 34rpx;
  position: absolute;
  background: #ffcf78;
  bottom:-90rpx;
  left:247rpx;
}
.out{
  position: relative;
}
.bgLine{
  position: absolute;
  width:750rpx;
  height: 22rpx;
  left:-38rpx;
  background: #8b1419;
  z-index: 10;
  border-top-left-radius: 22rpx;
  border-top-right-radius: 22rpx;
  bottom:0;
}
.error{
  color: #f5383f
}
.errorHide{
  display: none;
}
.errorShow{
  display: block
}