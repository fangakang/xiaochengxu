@import "../../icon/iconfont.wxss";
page{
  background: #f3f3f3;
}
.body{
  padding:35rpx;
  background: #fff;
}
.record{
  margin-bottom: 30rpx;
}
.fl{
  float:left;
}
.fr{
  float: right;
}
.content{
  padding: 24rpx 22rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.cardMsg{
  overflow: hidden;
  margin-bottom: 20rpx;
}
.logo{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  display: inline-block;
  margin-right: 20rpx;
}

.logo image{
  width:80rpx;
  height:80rpx;
  border-radius: 50%
}
.cardType{
  display:inline-block;
  color:#fff;
}
.name{
  font-size:30rpx;
}
.type{
  font-size: 22rpx;
  margin-top:7rpx;
}
.validity{
  padding-left: 105rpx;
  overflow: hidden;
}
.period{
  font-size: 22rpx;
  color:#fff;
}
.use{
  position: absolute;
  font-size:22rpx;
  line-height: 36rpx;
  width:106rpx;
  text-align: center;
  background: rgba(0,0,0,.5);
  border-radius: 18rpx;
  border: 2rpx solid #fff;
  color:#fff;
  right:20rpx;
  top:25rpx;
}
.money{
  position: absolute;
  color:#fff;
  bottom:20rpx;
  right:25rpx;
  font-size: 40rpx;
}
.money span{
  font-size: 20rpx;
}
.detailContent{
  background: #f4f4f4;
  padding-left: 40rpx;
}
.line{
  overflow: hidden;
  font-size: 24rpx;
  color:#666;
  padding: 30rpx 30rpx 30rpx 0;
  border-bottom:2rpx solid #eee;
}
.btnGroup{
  font-size: 20rpx;
  color:#666;
  overflow: hidden;
  padding:15rpx 30rpx;
}
.btnGroup>view{
  display: inline-block;
  line-height: 44rpx;
  width:135rpx;
  text-align: center;
  border-radius:10rpx;
}
.send{
  border: 2rpx solid #666;
  margin-right: 15rpx;
}
.recharge{
  color:#f24c36;
  border:2rpx solid #f24c36
}
.viewFail,.viewUse{
  text-align: center;
  font-size: 24rpx;
  color:#666;
}